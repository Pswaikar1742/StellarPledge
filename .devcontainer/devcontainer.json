{
    "name": "StellarPledge Dev Environment",
    "image": "mcr.microsoft.com/devcontainers/rust:1-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "postCreateCommand": "cargo install soroban-cli",
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    }
}